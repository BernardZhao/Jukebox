apiVersion: v1
kind: Service
metadata:
  name: jukebox-service
spec:
  selector:
    app: jukebox
  ports:
    - port: 80
      targetPort: 8080

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: jukebox-deployment
  labels:
    app: jukebox
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jukebox
  template:
    metadata:
      labels:
        app: jukebox
    spec:
      containers:
        - name: jukebox
          image: "docker.ocf.berkeley.edu/jukebox:<%= version%>"
          resources:
            limits:
              memory: 256Mi
              cpu: 500m
          ports:
            - containerPort: 8080
          args: ["-host", "tv.ocf.berkeley.edu"]
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: virtual-host-ingress
spec:
  rules:
    - host: jukebox.ocf.berkeley.edu
      http:
        paths:
          - backend:
              serviceName: jukebox-service
              servicePort: 80